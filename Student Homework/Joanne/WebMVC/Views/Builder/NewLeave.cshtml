@model hsdc.dpt.Control.DTO.Creational.Builder.Leave

@{
    ViewBag.Title = "新增請假單";
}

<h2>新增請假單</h2>

@using (Html.BeginForm("SaveLeave", "Builder", FormMethod.Post, new { id = "frmSave" }))
{
    <table>
        <tr>
            <th>請假單號</th>
            <td>@(Model.LeaveID == null ? "" : Model.LeaveID)</td>
        </tr>
        <tr>
            <th>申請人</th>
            <td>@Html.TextBoxFor(m => m.Applier)</td>
        </tr>
        <tr>
            <th>申請類別</th>
            <td>@Html.TextBoxFor(m => m.LeaveType)</td>
        </tr>
        <tr>
            <th>申請日期</th>
            <td>@Html.TextBoxFor(m => m.LeaveBeginDate)</td>
        </tr>
        <tr>
            <th>總申請日</th>
            <td>@Html.TextBoxFor(m => m.LeaveDay)</td>
        </tr>
 
    </table>
    <br />
    <br />
    <button id="save">儲存</button>

<table class="table-bordered">
    <colgroup>
        <col width="300" />
        <col width="300" />
        <col width="300" />
        <col width="300" />
        <col width="300" />
    </colgroup>
    <thead>
        <tr>
            <th>請假單號</th>
            <th>申請人</th>
            <th>申請類別</th>
            <th>申請日期</th>
            <th>總申請日</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            <tr>
                <td>@Model.LeaveID</td>
                <td>@Model.Applier</td>
                <td>@Model.LeaveType</td>
                <td>@Model.LeaveBeginDate</td>
                <td>@Model.LeaveDay</td>

            </tr>

        }

    </tbody>
</table>

}

@section BodyScripts
{
    <script>
        $("#save").click(function () {
            $("#frmSave").submit();
        });
    </script>
}